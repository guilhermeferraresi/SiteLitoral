            </div>
            <div class="carousel-item">
                <div class="hoteis">
                    <div class="card">
                        <img src="~/img/Ben's Bar &  Comidaria.jpg" class="d-block w-100" alt="Ben's Bar & Comidaria - Ilhabela">
                        <p class="nome-hotel">@ViewBag.nomeBen</p>
                        <p class="nome-cidade">@ViewBag.cidadeBen</p>
                    </div>
                    <div class="card">
                        <img src="~/img/Alcide's Restaurante.jpg" class="d-block w-100" alt="Alcide's Restaurante - Guarujá">
                        <p class="nome-hotel">@ViewBag.nomeA</p>
                        <p class="nome-cidade">@ViewBag.cidadeA</p>
                    </div>
                    <div class="card">
                        <img src="~/img/COSTAZUL.jpg" class="d-block w-100" alt="Costazul Seafood - Santos">
                        <p class="nome-hotel">@ViewBag.nomeC</p>
                        <p class="nome-cidade">@ViewBag.cidadeC</p>
                    </div>
                    <div class="card">
                        <img src="~/img/Jirêh Bar e Cozinha Prática.jpg" class="d-block w-100" alt="Jirêh Bar e Cozinha Prática - São Pedro">
                        <p class="nome-hotel">@ViewBag.nomeJ</p>
                        <p class="nome-cidade">@ViewBag.cidadeJ</p>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselRestaurantes" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselRestaurantes" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


